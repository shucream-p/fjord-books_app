<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @report.content %>
</p>

<p>
  <strong>User:</strong>
  <%= link_to @report.user.name, user_path(@report.user) %>
</p>

<p>
  <strong>Created Date:</strong>
  <%= @report.created_at.to_s(:datetime_jp) %>
</p>

<%= render partial: 'comments/index', locals: { commentable: @report } %>
<%= render partial: 'comments/form', locals: { commentable: @report, comment: Comment.new } %>

<% if current_user == @report.user %>
  <%= link_to 'Edit', edit_report_path(@report) %> |
<% end %>
<%= link_to 'Back', reports_path %>
